# Agent API Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/agent_api

# Brave Search API
BRAVE_API_KEY=your_brave_api_key_here

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=yasserrmd/jan-nano-4b:latest

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
RELOAD=true

# Redis (Optional - for enhanced caching)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Agent Configuration
DEFAULT_MODEL=yasserrmd/jan-nano-4b:latest
MAX_SESSIONS_PER_USER=10
SESSION_TIMEOUT_HOURS=24

# Search Configuration
SEARCH_CACHE_TTL_HOURS=1
MAX_SEARCH_RESULTS=20
DEFAULT_SEARCH_COUNT=10

# Production Settings
ENVIRONMENT=development
DEBUG=true
TESTING=false